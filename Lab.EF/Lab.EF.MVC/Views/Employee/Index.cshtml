@model List<Lab.EF.MVC.Models.EmployeeViewModel>
@{
    ViewBag.Title = "Empleados";
}

<h2>@ViewBag.Title</h2>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Apellido</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {

            <tr>
                <td>@item.Id</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>
                    @Html.ActionLink("Eliminar", "Eliminar", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                    @Html.ActionLink("Editar", "UpdateInsert", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
<p>@Html.ActionLink("Agregar Empleado", "UpdateInsert", new { id = 0 }, new { @class = "btn btn-success" })</p>
