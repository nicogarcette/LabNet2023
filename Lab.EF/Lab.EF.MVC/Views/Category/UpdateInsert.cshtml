@model Lab.EF.MVC.Models.CategoryViewModel
@{
    ViewBag.Title = "UpdateInsert";
}

@{ string value = Model == null ? "Crear" : "Editar";}

@using (Html.BeginForm()) {

    <div class="form-horizontal">
        <h2> @value Categorias</h2>
        <hr />
        @Html.HiddenFor(m => m.Id)

        <div class="form-group">
            @Html.LabelFor(m => m.Name, "Nombre", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value=@value class="btn btn-primary" />
                @Html.ActionLink("Volver", "Index", "Category", new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
}
